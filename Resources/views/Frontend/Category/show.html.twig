{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block title %}{{ category.title }}{% endblock %}

{% block content %}
    <div class="Page">
        {{ dump(categories) }}

        <div class="row">
            <div class="small-16 medium-14 large-12 xlarge-10 xxlarge-8 medium-centered columns">
                <div class="Article">
                    <a href="{{ path('webburza_article_frontend_index') }}">{{ 'webburza.sylius.article.back_to_all' | trans }}</a>

                    <h1 class="Article-title">{{ category.title }}</h1>

                    {% for article in articles %}
                        <p><strong>{{ article.title }}</strong></p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
